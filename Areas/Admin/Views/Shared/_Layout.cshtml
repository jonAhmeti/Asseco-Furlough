@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--favicons-->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/favicon/site.webmanifest">
    <link rel="mask-icon" href="~/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="~/css/Areas/Layout/index.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome-6.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/Areas/Shared/index.css" rel="stylesheet">
    <link href="~/css/Areas/Shared/customScrollBar.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Areas/Shared/index.js"></script>
    <script src="~/lib/font-awesome-6.0/js/all.min.js"></script>
    <script src="~/lib/ripple-effect/dist/ripples.js"></script>
</head>

<body class="d-flex flex-column overflow-hidden">
    <header style="z-index: 1;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow">
            <div class="container-fluid mx-0 mx-md-5 justify-content-sm-between justify-content-around">
                <!-- Header brand ASSECO image-->
                <a class="navbar-brand me-0 me-sm-3 assecoLogoLink d-flex justify-content-center justify-content-sm-start p-2" asp-area="" asp-controller="Home" asp-action="Index"><img id="assecologo"
                        src="~/images/asseco_southeasterneurope_logo.svg" alt="Asseco Logo" /></a>
                <div
                    class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-row-reverse flex-grow-0">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="ms-5 nav-item">
                            <partial name="~/Views/Shared/_Culture.cshtml" />
                        </li>
                        <li class="ms-4 nav-item">
                            <partial name="~/Views/Shared/_ProfileDropdown.cshtml" />
                        </li>
                    </ul>
                </div>
                <div class="menuOpener">
                    <input class="menu-btn" type="checkbox" id="menu-btn" />
                    <label id="sideHam" class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="d-flex flex-row row-cols-12 flex-grow-1" style="overflow-y: auto; overflow-x: hidden;">
        <aside id="sidenav" class="h-100 col-auto bg-white shadow">
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a id="dashboardLink" class="sidenavLinks nav-link d-flex align-items-center @(action=="" ? "active" : "")" href="/">
                        <span class="material-icons-round align-middle">dashboard</span> @Resources.Shared._Layout.dashTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="Department" ? "active" : "")" asp-area="Admin"
                        asp-controller="Department" asp-action="Index">
                        <i class="fas fa-building"></i> @Resources.Shared._Layout.depTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="User" ? "active" : "")" asp-area="Admin"
                        asp-controller="User" asp-action="Index">
                        <i class="fas fa-user-friends"></i> @Resources.Shared._Layout.userTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="Employee" ? "active" : "")" asp-area="Admin"
                        asp-controller="Employee" asp-action="Index">
                        <i class="fas fa-user-tie"></i> @Resources.Shared._Layout.empTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link d-flex align-items-center @(action=="AvailableDays" ? "active" : "")" asp-area="Admin"
                        asp-controller="AvailableDays" asp-action="Index">
                        <span class="material-icons-round align-middle">dns</span> @Resources.Shared._Layout.availDaysTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="Position" ? "active" : "")" asp-area="Admin"
                        asp-controller="Position" asp-action="Index">
                        <i class="fa-solid fa-chalkboard-user"></i> @Resources.Shared._Layout.posTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="Request" ? "active" : "")" asp-area="Admin"
                        asp-controller="Request" asp-action="Index">
                        <i class="fa-solid fa-bars-staggered"></i> @Resources.Shared._Layout.reqTitle
                    </a>
                </div>
                <div class="md-ripples ripples-light mx-4 my-3 rounded-pill">
                    <a class="sidenavLinks nav-link @(action=="Role" ? "active" : "")" asp-area="Admin"
                        asp-controller="Role" asp-action="Index">
                        <i class="fas fa-user-tag"></i> @Resources.Shared._Layout.roleTitle
                    </a>
                </div>
        </aside>
        <div class="w-100 h-100 flex-grow-1" style="overflow-y: auto; overflow-x: hidden; z-index: 0;">
            @RenderBody()
        </div>
    </main>
</body>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Areas/Layout/side.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
<script src="~/lib/DataTables/datatables.min.js"></script>
<script src="~/lib/DataTables/DataTables-"></script>
<script src="~/lib/DataTables/jszip.min.js"></script>
</html>
