@model IEnumerable<Furlough.DAL.Models.SpentDaysHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BaseDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrevYearDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestHistory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BaseDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BonusDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrevYearDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestHistory.Id)
            </td>
            <td>
