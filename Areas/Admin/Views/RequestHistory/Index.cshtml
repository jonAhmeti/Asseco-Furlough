@model IEnumerable<Furlough.DAL.Models.RequestHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlteredOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlteredByNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlteredToNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlteredOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlteredByNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlteredToNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
