@model Furlough.Models.Role

@{
    ViewData["Title"] = "Create";
}

<div class="container subPageContainer">
    <div class="w-100">
        <div class="w-50 d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle d-flex justify-content-center align-middle">
                <h2 class="text-white mt-1">Role Create</h2>
            </div>
            <div class="d-flex align-items-center me-5">
                <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
                    @Resources.Shared._Admin_Layout_en.backToList
                </a>
            </div>
        </div>
    </div>
    <div class="w-100 ms-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Title" placeholder="Title" />
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input class="form-control" asp-for="Description" placeholder="Description" />
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <div class="form-group">
                            <input type="submit" value="@Resources.Shared._Admin_Layout_en.create"
                                class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>