@model Furlough.Models.Role

@{
    ViewData["Title"] = "Details";
}

<div class="container subPageContainer">
    <div class="w-100">
        <div class="w-50 d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle d-flex justify-content-center align-middle">
                <h2 class="text-white mt-1">Role Details</h2>
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <a class="mx-1 text-warning px-4 rounded border border-warning" asp-action="Edit"
                    asp-route-id="@Model.Id">@Resources.Shared._Admin_Layout_en.edit</a>
                <a class="mx-1 text-danger px-4 rounded border border-danger" asp-action="Delete"
                    asp-route-id="@Model.Id">@Resources.Shared._Admin_Layout_en.delete</a>
            </div>
        </div>
    </div>
    <div class="w-100 ms-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div class="w-50 d-flex justify-content-center">
        <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
            @Resources.Shared._Admin_Layout_en.backToList
        </a>
    </div>
</div>