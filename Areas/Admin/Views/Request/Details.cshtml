@model Furlough.DAL.Models.Request

@{
    ViewData["Title"] = "Details";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<h1>@localizer["pageTitle"]</h1>

<div>
    <h4>@localizer["pageSubTitle"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@localizer["userId"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(item => item.RequestedByUserId)
        </dd>
        <dt class="col-sm-2">@localizer["requestStatus"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestStatus.Id)
        </dd>
        <dt class="col-sm-2">@localizer["requestType"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestType.Id)
        </dd>
        <dt class="col-sm-2">@localizer["requestedTime"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestedOn)
        </dd>
        <dt class="col-sm-2">@localizer["dateFrom"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class="col-sm-2">@localizer["dateTo"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateUntil)
        </dd>
        <dt class="col-sm-2">@localizer["paidDays"]:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaidDays)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
