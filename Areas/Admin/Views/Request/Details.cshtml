@model Furlough.DAL.Models.Request

@{
    ViewData["Title"] = "Details";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="container subPageContainer">
    <div class="w-100">
        <div class="detailHeaderWrapper d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle text-center">
                <h2 class="text-white mt-2">Request Details</h2>
            </div>
            <div class="d-flex align-items-center">
                <a class="ms-1 text-warning paddingXBtn rounded border border-warning" asp-action="Edit"
                    asp-route-id="@Model.Id">@Resources.Shared._Table_en.edit</a>
                <a class="ms-1 text-danger paddingXBtn rounded border border-danger" asp-action="Delete"
                    asp-route-id="@Model.Id">@Resources.Shared._Table_en.delete</a>
            </div>
        </div>
    </div>
    <div id="detailsWrapper" class="w-100 ms-4">
        <dl class="row">
            <dt class="col-sm-2">@localizer["userId"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(item => item.RequestedByUserId)
            </dd>
            <dt class="col-sm-2">@localizer["requestStatus"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStatus.Id)
            </dd>
            <dt class="col-sm-2">@localizer["requestType"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestType.Id)
            </dd>
            <dt class="col-sm-2">@localizer["requestedTime"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestedOn)
            </dd>
            <dt class="col-sm-2">@localizer["dateFrom"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateFrom)
            </dd>
            <dt class="col-sm-2">@localizer["dateTo"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUntil)
            </dd>
            <dt class="col-sm-2">@localizer["paidDays"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaidDays)
            </dd>
        </dl>
    </div>
    <div class="w-auto">
        <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
            @Resources.Shared._Table_en.backToList
        </a>
    </div>
</div>