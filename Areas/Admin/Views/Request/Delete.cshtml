@model Furlough.DAL.Models.Request

@{
    ViewData["Title"] = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="container subPageContainer">
    <div class="w-100">
        <div class="detailHeaderWrapper d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle text-center">
                <h2 class="text-white mt-2">@localizer["pageTitle"]</h2>
            </div>
            <div class="d-flex align-items-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="@Resources.Shared._Table.delete"
                        class="mx-1 py-2 paddingXBtn btn btn-danger" />
                </form>

            </div>
        </div>
    </div>
    <div id="detailsWrapper" class="w-100 ms-4">
        <div>
            <h4>@localizer["deleteConfirmation"]</h4>
        </div>
        <dl class="row">
            <dt class="col-sm-2">@localizer["userId"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(item => item.RequestedByUserId)
            </dd>
            <dt class="col-sm-2">@localizer["requestStatus"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStatusId)
            </dd>
            <dt class="col-sm-2">@localizer["requestType"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestTypeId)
            </dd>
            <dt class="col-sm-2">@localizer["requestedTime"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestedOn)
            </dd>
            <dt class="col-sm-2">@localizer["dateFrom"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dates)
            </dd>
            </dd>
            <dt class="col-sm-2">@localizer["paidDays"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaidDays)
            </dd>
        </dl>
        <div class="w-auto">
            <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
                @Resources.Shared._Table.backToList
            </a>
        </div>
    </div>
</div>