@model Furlough.DAL.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="container subPageContainer">
    <div class="w-100">
        <div class="w-50 d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle d-flex justify-content-center align-middle">
                <h2 class="text-white mt-1">Employee Delete</h2>
            </div>
            <div class="d-flex align-items-center me-5">
                <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
                    @Resources.Shared._Admin_Layout_en.backToList
                </a>
            </div>
        </div>
    </div>
    <div class="w-100 ms-4">
        <div>
            <h4>Are you sure you want to delete this?</h4>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JoinDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JoinDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Department.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Position)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Position.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Id)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@Resources.Shared._Admin_Layout_en.delete" class="mx-1 px-4 btn btn-danger" />
        </form>
    </div>
</div>