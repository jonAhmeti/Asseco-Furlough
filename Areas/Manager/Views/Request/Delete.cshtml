@model Furlough.DAL.Models.Request

@{
    ViewData["Title"] = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="container subPageContainer">
    <div class="w-100">
        <div class="w-50 d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle d-flex justify-content-center align-middle">
                <h2 class="text-white mt-1">Request Delete</h2>
            </div>
            <div class="d-flex align-items-center me-5">
                <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
                    @Resources.Shared._Admin_Layout_en.backToList
                </a>
            </div>
        </div>
    </div>
    <div class="w-100 ms-4">
        <div>
            <h4>Are you sure you want to delete this?</h4>
        </div>
        <dl class="row">
            <dt class="col-sm-2">User Id:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(item => item.RequestedByUserId)
            </dd>
            <dt class="col-sm-2">Status:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStatus.Id)
            </dd>
            <dt class="col-sm-2">Type:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestType.Id)
            </dd>
            <dt class="col-sm-2">Requested Time:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestedOn)
            </dd>
            <dt class="col-sm-2">From:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateFrom)
            </dd>
            <dt class="col-sm-2">To:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUntil)
            </dd>
            <dt class="col-sm-2">Paid Days:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaidDays)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@Resources.Shared._Admin_Layout_en.delete" class="mx-1 px-4 btn btn-danger" />
        </form>
    </div>
</div>