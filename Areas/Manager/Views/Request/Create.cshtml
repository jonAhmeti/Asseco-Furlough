@model Furlough.DAL.Models.Request

@{
    ViewData["Title"] = "Create";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="container subPageContainer">
    <div class="w-100">
        <div class="w-50 d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded customSubPageTitle d-flex justify-content-center align-middle">
                <h2 class="text-white mt-1">Request Create</h2>
            </div>
            <div class="d-flex align-items-center me-5">
                <a class="mx-1 px-4 rounded btn btn-primary" asp-action="Index">
                    @Resources.Shared._Admin_Layout_en.backToList
                </a>
            </div>
        </div>
    </div>
    <div class="w-100 ms-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <select asp-for="RequestedByUserId" class="form-control"
                            asp-items="ViewBag.RequestedByUserId"></select>
                        <label asp-for="RequestedByUserId">User Id</label>
                    </div>
                    <div class="form-floating mb-3">
                        <select asp-for="RequestStatusId" class="form-control"
                            asp-items="ViewBag.RequestStatusId"></select>
                        <label asp-for="RequestStatusId">Status</label>
                    </div>
                    <div class="form-floating mb-2">
                        <select asp-for="RequestTypeId" class="form-control" asp-items="ViewBag.RequestTypeId"></select>
                        <label asp-for="RequestTypeId">Type</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="DateFrom" class="form-control" />
                        <label asp-for="DateFrom">From</label>
                        <span asp-validation-for="DateFrom" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="DateUntil" class="form-control" />
                        <label asp-for="DateUntil">To</label>
                        <span asp-validation-for="DateUntil" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PaidDays" class="form-control" placeholder="Paid Days"/>
                        <label asp-for="PaidDays">Paid Days</label>
                        <span asp-validation-for="PaidDays" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>