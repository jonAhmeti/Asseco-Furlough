@model Furlough.DAL.Models.Request
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Details";
}

<div class="container subPageContainer">
    <div class="w-100">
        <div class="detailHeaderWrapper d-flex justify-content-between mb-3">
            <div class="blue-gradient rounded-pill customSubPageTitle text-center">
                <h2 class="text-white mt-2">@localizer["pageTitle"]</h2>
            </div>
            <div class="d-flex align-items-center">
                <a class="ms-1 text-warning paddingXBtn rounded border border-warning" asp-action="Edit"
                    asp-route-id="@Model.Id">@Resources.Shared._Table.edit</a>
                <a class="ms-1 text-danger paddingXBtn rounded border border-danger" asp-action="Delete"
                    asp-route-id="@Model.Id">@Resources.Shared._Table.delete</a>
            </div>
        </div>
    </div>
    <div id="detailsWrapper" class="w-100 ms-4">
        <dl class="row">
            <dt class="col-sm-2">@localizer["userId"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(item => item.RequestedByUserId)
            </dd>
            <dt class="col-sm-2">@localizer["requestStatus"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStatusId)
            </dd>
            <dt class="col-sm-2">@localizer["requestType"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestTypeId)
            </dd>
            <dt class="col-sm-2">@localizer["requestedTime"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestedOn)
            </dd>
            <dt class="col-sm-2">@localizer["dates"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dates)
            </dd>
            <dt class="col-sm-2">@localizer["requestDaysAmount"]:</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DaysAmount)
            </dd>
        </dl>
    </div>
    <div class="w-auto">
        <a class="mx-1 px-4 rounded btn btn-primary" onclick="history.go(-1);">
            @Resources.Shared._Table.backToList
        </a>
    </div>
</div>