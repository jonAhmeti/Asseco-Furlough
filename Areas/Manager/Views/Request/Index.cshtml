@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model IEnumerable<Furlough.DAL.Models.RequestByDepartment>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="container-fluid p-0 mt-5">
    <div class="w-100 d-flex justify-content-center">
        <div
            class="blue-gradient-div shadow rounded-pill py-2 mx-4 mb-3 d-flex justify-content-center align-items-center">
            <h2 class="text-white mx-3">@Resources.Shared._Layout.reqTitle</h2>
        </div>
    </div>
    <div class="employeeRequestTableDiv w-100 d-flex justify-content-center">
        <table class="table w-75 shadow rounded py-2 mx-4 mb-3">
            <thead>
                <tr>
                    <th class="border-0"></th>
                    <th class="border-0"></th>
                    <th class="border-0"></th>
                    <th class="border-0"></th>
                    <th class="border-0 w-25"></th>
                </tr>
                <tr>
                    <th>Requested on</th>
                    <th>Employee</th>
                    <th>From</th>
                    <th>Until</th>
                    <th class="text-center">
                        <a class="mx-1 text-primary px-4 rounded border border-primary"
                            asp-action="Create">@Resources.Shared._Table.create</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr rowId="@counter">
                        <td>
                            <a class="rowLink" asp-action="Details" asp-route-id="@item.RequestedOn">
                                @item.RequestedOn
                            </a>
                        </td>
                        <td>
                            <a class="rowLink" asp-action="Details" asp-route-id="@item.EmployeeName">
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </a>
                        </td>
                        <td>
                            <a class="rowLink" asp-action="Details" asp-route-id="@item.RequestDateFrom">
                                @item.RequestDateFrom.ToShortDateString()
                            </a>
                        </td>
                        <td>
                            <a class="rowLink" asp-action="Details" asp-route-id="@item.RequestDateUntil">
                                @item.RequestDateUntil.ToShortDateString()
                            </a>
                        </td>
                        <td class="text-center align-middle">
                            <a class="mx-1 text-warning px-4 rounded border border-warning" asp-action="Edit"
                            asp-route-id="@item.RequestId">
                                @Resources.Shared._Table.edit
                            </a>
                            <a class="mx-1 text-danger px-4 rounded border border-danger" asp-action="Delete"
                            asp-route-id="@item.RequestId">
                                @Resources.Shared._Table.delete
                            </a>
                        </td>
                    </tr>
                    //Counter Incremental
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>