<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Furlough</title>
    <link rel="stylesheet" href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.css" />
    <link href="~/lib/font-awesome-6.0/css/all.min.css" rel="stylesheet" >
    <script src="~/lib/font-awesome-6.0/js/all.min.js"></script>
    <link rel="stylesheet" href="~/css/Areas/Employee/Home/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Furlough.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery-3.6.0.js"></script>
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow">
            <div class="container-fluid justify-content-around">
                <!-- Header brand ASSECO image-->
                <a class="navbar-brand p-3" asp-area="" asp-controller="Home" asp-action="Index"><img id="assecologo" src="~/images/asseco_southeasterneurope_logo.svg" alt="Asseco Logo" /></a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-row-reverse flex-grow-0">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="d-flex flex-row row-cols-12 flex-grow-1">
        <aside class="col-lg-1 col-2 bg-white shadow-sm position-relative">

        </aside>
        @RenderBody()
    </main>
    <script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>