@{
    ViewData["Title"] = "Home Page";
}
@model User


<div class="container h-100">
    <!-- Login Form -->
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-5 rounded">
            <div class="row row-cols-12 text-center bg-white mb-3 shadow rounded-top fs-4">
                <div id="login" class="col-6 py-3">
                    <p class="m-0">Log In</p>
                </div>
                <div id="signup" class="col-6 py-3">
                    <p class="m-0">Sign Up</p>
                </div>
            </div>
            <div id="loginform" class="row bg-white shadow rounded-bottom overflow-hidden">
                <form id="form" class="form-example p-3" action="#" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="fullname" placeholder="Fullname">
                        <label for="fullname">Fullname</label>
                    </div>
                    <div class="input-group mb-3">
                        <div class="form-floating flex-grow-1">
                            <input type="text" class="form-control rounded-0 rounded-start" name="email"
                                placeholder="Email">
                            <label for="email">Email</label>
                        </div>
                        <span class="input-group-text">@@asseco-see.com</span>
                    </div>
                    <div class="form-floating">
                        <select class="form-select" name="departament">
                            <option selected hidden></option>
                            <option value="1">AIS</option>
                            <option value="2">Banking</option>
                            <option value="3">CIS</option>
                            <option value="4">Financat</option>
                        </select>
                        <label for="departament">Selektoni departamentin</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Login Form End-->
</div>
<script lang="javascript" type="text/javascript" src="~/js/login-signup.js"></script>