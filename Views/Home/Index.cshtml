@{
    ViewData["Title"] = "Home Page";
}
@model User
<link rel="stylesheet" href="~/css/Home/index.css"/>

<div class="d-flex flex-column mx-auto" style="width:35%;">
    <div class="d-flex flex-row mb-3 rounded-top bg-white position-relative shadow-sm">
        <div id="login" class="d-flex flex-grow-1 justify-content-center p-3"><span class="fw-bold fs-5">Log In</span></div>
        <div id="signup" class="d-flex flex-grow-1 justify-content-center p-3 text-muted"><span class="fw-bold fs-5">Sign Up</span></div>
        <div id="activeIndicator" class="bg-primary border-5 position-absolute w-50 bottom-0" style="height:5px;"></div>
    </div>

    <div id="formWrapper" class="d-flex flex-row bg-white rounded-bottom shadow-sm">
        <partial name="./Partial/Login"/>
    </div>
</div>
<script lang="javascript" type="text/javascript" src="~/js/Home/index.js"></script>